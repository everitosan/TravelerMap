body
  margin: 0
#app
  font-family: 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-align: center
  color: #2c3e50
.hDivider
  background: rgba(98,76,158, 0.64)
  margin: 0 auto
  height: 1px
  width: 90%
.dot
  bottom: 2px
  margin-right: 5px
  position: relative
  width: 6px
.container
  margin: 0 auto
  width: 85%

.light_button
  display: inline-block;
  margin-top: 1em
  cursor: pointer
  transition: all ease 0.3s
  span
    color: #FF0077
    margin-right: 0
  &:hover
    opacity: 0.8
