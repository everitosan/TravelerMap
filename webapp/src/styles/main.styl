@import '../styles/colors'

body
  margin: 0
#app
  font-family: 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  text-align: center
  color: #2c3e50
.hDivider
  background: rgba(98,76,158, 0.64)
  margin: 0 auto
  height: 1px
  width: 90%
.dot
  bottom: 2px
  margin-right: 5px
  position: relative
  width: 6px
.container
  margin: 0 auto
  width: 85%

.light_button
  font-size: 1em
  color: white
  background: transparent
  border: none
  display: inline-block;
  margin-top: 1em
  cursor: pointer
  transition: all ease 0.3s
  span
    color: #FF0077
    margin-right: 0
  &:hover
    opacity: 0.8
  &:focus
    outline: 0

// CUSTOM INPUT

.input
  position: relative;
  height: 45px
  label
    text-transform: uppercase
    font-size: 12px
    position: absolute
    left: 0
    bottom: 2px
    font-weight: 100
    transition: all 0.4s ease-in-out
  input
    width: 100%
    background: transparent
    border: none
    border-bottom: 1px solid rgba(255, 255, 255, .71)
    color: white
    font-size: 14px
    font-weight: 100
    position: absolute
    bottom: 0
    z-index: 5
    &[type="date"], &[type="time"]
      color: transparent
    &:focus, &:valid
      outline: none
      color: inherit
      & ~ label
        font-size: 8px
        bottom: 24px
  [class^="icon-"], [class*=" icon-"]
    position: absolute
    opacity: 0.6
    bottom: 4px
    right: 2px

.dirty
  .input
    input:invalid
      border-color: accent-color
      color: accent-color
      & ~ label
        color: accent-color
        font-size: 8px
        bottom: 24px
